{
  "compilerOptions": {
    "outDir": "temp/build",
    "target": "ES6",
    "module": "CommonJS",
    "allowJs": true,
    "sourceMap": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "removeComments": false,
    "preserveConstEnums": false,
    "skipLibCheck": true,
    "pretty": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "./source/**/*.ts",
    "./test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "bower_components",
    "*.d.ts"
  ]
}